/**
 * Blog Styles - Apple Newsroom Inspired
 * Matches home page color scheme with Apple's clean aesthetic
 * Uses maximum specificity to override reference.css
 */

/* Reset WordPress and Framer defaults for blog pages */
body:not(.home) * {
    box-sizing: border-box;
}

/* ========================================
   ARCHIVE PAGE
   ======================================== */

body:not(.home) .apl-blog-archive,
.apl-blog-archive {
    min-height: 100vh;
    background: #f5f5f7;
    padding-bottom: 80px;
    font-family: Inter, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    margin: 0;
    padding-top: 0;
}

/* Hero Section */
body:not(.home) .apl-blog-hero,
.apl-blog-hero {
    background: linear-gradient(135deg, #1d1d1f 0%, #2d2d30 100%);
    padding: clamp(80px, 12vw, 140px) 20px clamp(60px, 8vw, 100px);
    text-align: center;
    color: #fff;
    margin: 0;
}

.apl-blog-hero__content {
    max-width: 980px;
    margin: 0 auto;
}

.apl-blog-hero__title {
    font-size: clamp(3rem, 6vw, 5rem);
    font-weight: 700;
    line-height: 1.1;
    margin: 0 0 20px;
    letter-spacing: -0.02em;
    color: #fff;
}

.apl-blog-hero__subtitle {
    font-size: clamp(1.1rem, 2vw, 1.5rem);
    line-height: 1.4;
    color: rgba(255, 255, 255, 0.85);
    max-width: 720px;
    margin: 0 auto;
    font-weight: 400;
}

/* Category Filters */
.apl-blog-filters {
    background: #f5f5f7;
    padding: 32px 20px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(20px);
    background: rgba(245, 245, 247, 0.95);
}

.apl-blog-filters__inner {
    max-width: 980px;
    margin: 0 auto;
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    justify-content: center;
}

.apl-blog-filter {
    padding: 10px 20px;
    border-radius: 20px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    color: #1d1d1f;
    background: #fff;
    border: 1px solid rgba(0, 0, 0, 0.1);
    transition: all 0.2s ease;
}

.apl-blog-filter:hover {
    background: #f5f5f7;
    border-color: rgba(0, 0, 0, 0.2);
}

.apl-blog-filter.active {
    background: #1d1d1f;
    color: #fff;
    border-color: #1d1d1f;
}

/* Blog Grid */
.apl-blog-grid {
    max-width: 980px;
    margin: 60px auto 0;
    padding: 0 20px;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 40px;
}

/* Featured Post (First Post) */
.apl-blog-card--featured {
    grid-column: 1 / -1;
}

/* Blog Card */
.apl-blog-card {
    background: #fff;
    border-radius: 18px;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    display: flex;
    flex-direction: column;
}

.apl-blog-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.12);
}

.apl-blog-card__image-link {
    display: block;
    text-decoration: none;
}

.apl-blog-card__image {
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: #f5f5f7;
    position: relative;
}

.apl-blog-card--featured .apl-blog-card__image {
    aspect-ratio: 21 / 9;
}

.apl-blog-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.apl-blog-card:hover .apl-blog-card__image img {
    transform: scale(1.05);
}

.apl-blog-card__content {
    padding: 28px;
    display: flex;
    flex-direction: column;
    flex: 1;
}

.apl-blog-card--featured .apl-blog-card__content {
    padding: 40px;
}

.apl-blog-card__category {
    font-size: 12px;
    font-weight: 700;
    letter-spacing: 0.08em;
    color: #ff6207;
    margin-bottom: 12px;
}

.apl-blog-card__title {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.3;
    margin: 0 0 12px;
    letter-spacing: -0.01em;
}

.apl-blog-card--featured .apl-blog-card__title {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 16px;
}

.apl-blog-card__title a {
    color: #1d1d1f;
    text-decoration: none;
    transition: color 0.2s ease;
}

.apl-blog-card__title a:hover {
    color: #ff6207;
}

.apl-blog-card__excerpt {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #6e6e73;
    margin-bottom: 16px;
}

.apl-blog-card__meta {
    font-size: 14px;
    color: #86868b;
    margin-top: auto;
}

/* Pagination */
.apl-blog-pagination {
    max-width: 980px;
    margin: 60px auto 0;
    padding: 0 20px;
}

.apl-blog-pagination .pagination {
    display: flex;
    justify-content: center;
    gap: 8px;
    list-style: none;
    padding: 0;
    margin: 0;
}

.apl-blog-pagination .page-numbers {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 44px;
    height: 44px;
    padding: 0 16px;
    border-radius: 22px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    color: #1d1d1f;
    background: #fff;
    border: 1px solid rgba(0, 0, 0, 0.1);
    transition: all 0.2s ease;
}

.apl-blog-pagination .page-numbers:hover {
    background: #f5f5f7;
    border-color: rgba(0, 0, 0, 0.2);
}

.apl-blog-pagination .page-numbers.current {
    background: #1d1d1f;
    color: #fff;
    border-color: #1d1d1f;
}

.apl-blog-pagination .page-numbers.dots {
    border: none;
    background: transparent;
}

/* Empty State */
.apl-blog-empty {
    max-width: 640px;
    margin: 80px auto;
    padding: 60px 20px;
    text-align: center;
    background: #fff;
    border-radius: 18px;
}

.apl-blog-empty h2 {
    font-size: 2rem;
    margin-bottom: 16px;
    color: #1d1d1f;
}

.apl-blog-empty p {
    font-size: 1.1rem;
    color: #6e6e73;
}

/* ========================================
   SINGLE POST PAGE
   ======================================== */

.apl-blog-single {
    background: #fff;
}

/* Header */
.apl-blog-single__header {
    background: linear-gradient(135deg, #1d1d1f 0%, #2d2d30 100%);
    padding: clamp(60px, 10vw, 100px) 20px clamp(50px, 8vw, 80px);
    color: #fff;
}

.apl-blog-single__header-inner {
    max-width: 820px;
    margin: 0 auto;
}

.apl-blog-single__back {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 32px;
    font-size: 14px;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.85);
    text-decoration: none;
    transition: color 0.2s ease;
}

.apl-blog-single__back:hover {
    color: #fff;
}

.apl-blog-single__category {
    font-size: 12px;
    font-weight: 700;
    letter-spacing: 0.08em;
    color: #ff6207;
    margin-bottom: 16px;
}

.apl-blog-single__title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    margin: 0 0 24px;
    letter-spacing: -0.02em;
    color: #fff;
}

.apl-blog-single__meta {
    font-size: 15px;
    color: rgba(255, 255, 255, 0.7);
}

/* Featured Image */
.apl-blog-single__featured {
    background: #f5f5f7;
    padding: 40px 20px;
}

.apl-blog-single__featured-inner {
    max-width: 1200px;
    margin: 0 auto;
    border-radius: 18px;
    overflow: hidden;
    box-shadow: 0 12px 48px rgba(0, 0, 0, 0.15);
}

.apl-blog-single__featured img {
    width: 100%;
    height: auto;
    display: block;
}

/* Content */
.apl-blog-single__content {
    background: #fff;
    padding: clamp(60px, 8vw, 100px) 20px;
}

.apl-blog-single__content-inner {
    max-width: 720px;
    margin: 0 auto;
    font-size: 1.125rem;
    line-height: 1.75;
    color: #1d1d1f;
}

.apl-blog-single__content-inner p {
    margin-bottom: 1.5em;
}

.apl-blog-single__content-inner h2 {
    font-size: 2rem;
    font-weight: 700;
    margin: 2em 0 0.75em;
    letter-spacing: -0.01em;
    color: #1d1d1f;
}

.apl-blog-single__content-inner h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 1.75em 0 0.75em;
    color: #1d1d1f;
}

.apl-blog-single__content-inner a {
    color: #ff6207;
    text-decoration: none;
    border-bottom: 1px solid rgba(255, 98, 7, 0.3);
    transition: border-color 0.2s ease;
}

.apl-blog-single__content-inner a:hover {
    border-bottom-color: #ff6207;
}

.apl-blog-single__content-inner ul,
.apl-blog-single__content-inner ol {
    margin-bottom: 1.5em;
    padding-left: 1.5em;
}

.apl-blog-single__content-inner li {
    margin-bottom: 0.5em;
}

.apl-blog-single__content-inner blockquote {
    margin: 2em 0;
    padding: 1.5em 2em;
    background: #f5f5f7;
    border-left: 4px solid #ff6207;
    border-radius: 0 8px 8px 0;
    font-style: italic;
    color: #6e6e73;
}

.apl-blog-single__content-inner img {
    max-width: 100%;
    height: auto;
    border-radius: 12px;
    margin: 2em 0;
}

.apl-blog-single__content-inner code {
    background: #f5f5f7;
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 0.9em;
    font-family: 'SF Mono', Monaco, 'Courier New', monospace;
}

.apl-blog-single__content-inner pre {
    background: #1d1d1f;
    color: #fff;
    padding: 1.5em;
    border-radius: 12px;
    overflow-x: auto;
    margin: 2em 0;
}

.apl-blog-single__content-inner pre code {
    background: none;
    padding: 0;
    color: inherit;
}

/* Footer */
.apl-blog-single__footer {
    background: #f5f5f7;
    padding: clamp(60px, 8vw, 80px) 20px clamp(80px, 10vw, 120px);
}

.apl-blog-single__footer-inner {
    max-width: 1200px;
    margin: 0 auto;
}

/* Tags */
.apl-blog-single__tags {
    margin-bottom: 60px;
}

.apl-blog-single__tags strong {
    display: block;
    font-size: 14px;
    font-weight: 700;
    color: #1d1d1f;
    margin-bottom: 12px;
}

.apl-blog-single__tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
}

.apl-blog-tag {
    padding: 8px 16px;
    background: #fff;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 16px;
    font-size: 14px;
    font-weight: 600;
    color: #1d1d1f;
    text-decoration: none;
    transition: all 0.2s ease;
}

.apl-blog-tag:hover {
    background: #1d1d1f;
    color: #fff;
    border-color: #1d1d1f;
}

/* Related Posts */
.apl-blog-single__related-title {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 32px;
    color: #1d1d1f;
}

.apl-blog-single__related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 32px;
}

.apl-blog-related-card {
    background: #fff;
    border-radius: 18px;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
}

.apl-blog-related-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.12);
}

.apl-blog-related-card__image-link {
    display: block;
}

.apl-blog-related-card__image {
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: #f5f5f7;
}

.apl-blog-related-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.apl-blog-related-card:hover .apl-blog-related-card__image img {
    transform: scale(1.05);
}

.apl-blog-related-card__content {
    padding: 24px;
}

.apl-blog-related-card__category {
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 0.08em;
    color: #ff6207;
    margin-bottom: 8px;
}

.apl-blog-related-card__title {
    font-size: 1.25rem;
    font-weight: 700;
    line-height: 1.3;
    margin: 0 0 8px;
}

.apl-blog-related-card__title a {
    color: #1d1d1f;
    text-decoration: none;
    transition: color 0.2s ease;
}

.apl-blog-related-card__title a:hover {
    color: #ff6207;
}

.apl-blog-related-card__date {
    font-size: 13px;
    color: #86868b;
}

/* ========================================
   RESPONSIVE
   ======================================== */

@media (max-width: 768px) {
    .apl-blog-grid {
        grid-template-columns: 1fr;
        gap: 32px;
    }

    .apl-blog-single__related-grid {
        grid-template-columns: 1fr;
    }

    .apl-blog-filters__inner {
        justify-content: flex-start;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        scrollbar-width: none;
        -ms-overflow-style: none;
    }

    .apl-blog-filters__inner::-webkit-scrollbar {
        display: none;
    }

    .apl-blog-filter {
        flex-shrink: 0;
    }
}

@media (max-width: 640px) {
    .apl-blog-card__content,
    .apl-blog-card--featured .apl-blog-card__content {
        padding: 24px;
    }

    .apl-blog-single__content-inner {
        font-size: 1.0625rem;
    }
}
